@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<section class="contact-section pb-50">
    <div class="container" style="padding: 0 20%">
        <div class="row">
            <div class="col-xl-12">
                <div class="contact-form-wrapper">
                    <div class="row">
                        <div class="col-xl-10 col-lg-8 mx-auto">
                            <div class="section-title text-center mb-50">
                                <span class="wow fadeInDown" data-wow-delay=".2s">We are glad to see you back!</span>
                                <h3 class="wow fadeInUp" data-wow-delay=".4s">Continue With Your Account</h3>
                                <p class="wow fadeInUp" data-wow-delay=".6s">At vero eos et accusamus et iusto odio dignissimos ducimus quiblanditiis praesentium</p>
                            </div>
                        </div>
                    </div>
                    <form id="account" method="post" class="contact-form">
                        <div asp-validation-summary="All" class="text-danger text-center pb-2"></div>
                        <div class="form-group">
                            <input class="form-control" placeholder="Email address" required asp-for="Input.Email">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="Password" required asp-for="Input.Password">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="button text-center">
                                    <button type="submit" class="theme-btn">LOGIN</button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group mt-4" style="text-align: center">
                            <p>
                                <a asp-page="./ForgotPassword" asp-route-returnUrl="@Model.ReturnUrl">Forgot your password?</a>
                            </p>
                            <p>
                                <a asp-page="./ResendEmailConfirmation" asp-route-returnUrl="@Model.ReturnUrl">Resend email confirmation</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
