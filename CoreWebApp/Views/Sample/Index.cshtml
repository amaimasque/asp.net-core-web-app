@model IEnumerable<CoreWebApp.Models.EmployeeModel>
<section>
    <div class="section-title mb-50">
        <div class="row">
            <div class="col-lg-9">
                <h3 class="wow fadeInUp" data-wow-delay=".4s">Employee List</h3>
                <p class="wow fadeInUp" data-wow-delay=".6s">At vero eos et accusamus et iusto odio dignissimos ducimus quiblanditiis praesentium</p>
            </div>
            <div class="col-lg-3">
                <a class="theme-btn" href="/sample/add">Add Employee</a>
            </div>
        </div>
    </div>
    <!-- Row -->
    <div class="row mt-20">
        <!-- DataTable with Hover -->
        <div class="col-lg-12">
            <div class="card mb-4">
                <!--<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">DataTables</h6>
                </div>-->
                <div class="table-responsive p-3">
                    <table class="table align-items-center table-flush table-hover dt-responsive nowrap" id="dataTableHover">
                        <thead class="thead-light">
                            <tr>
                                <th>Name</th>
                                <th>Position</th>
                                <th>Office</th>
                                <th>Start date</th>
                                <th>Salary</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>Position</th>
                                <th>Office</th>
                                <th>Start date</th>
                                <th>Salary</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => item.Name)</td>
                                    <td>@Html.DisplayFor(m => item.Position)</td>
                                    <td>@Html.DisplayFor(m => item.Office)</td>
                                    <td>@Html.DisplayFor(m => item.StartDate)</td>
                                    <td>@Html.DisplayFor(m => item.Salary)</td>
                                    <td class="text-center row">
                                        <div class="col-auto">
                                            <a href="/sample/edit/@item.ID"><i class="fas fa-edit text-primary"></i></a>
                                        </div>
                                        <div class="col-auto">
                                            <a href="/sample/details/@item.ID"><i class="fa fa-eye text-primary"></i></a>
                                        </div>
                                    </td>
                                </tr>
                             }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section> 
